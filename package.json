{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": ["rest", "api", "node.js"],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost",
    "CLI": "npm run build && chmod +x ./dist/main.cli.js && ./dist/main.cli.js"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "nodemon": "3.1.7",
    "pino-pretty": "11.2.2",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.8.0",
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "generate-pw": "^1.5.11",
    "got": "14.4.2",
    "guid-typescript": "1.0.9",
    "inversify": "^6.0.2",
    "json-server": "0.17.3",
    "mongoose": "8.7.0",
    "pino": "9.4.0",
    "reflect-metadata": "0.2.2"
  }
}
